@model IEnumerable<ILG_Global.BussinessLogic.ViewModels.OurServiceVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Our Services</h1>

<button value="Create New" type="button" onclick="location.href = '@Url.Action("Create", "OurServices")'" class="btn btn-primary">
    <span>Create New</span>
</button>

<div class="card">
    <div class="card-header">
        <h1 class="card-title">Contact Us</h1>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SubTitle)
                    </th>

                    <th>
                        Status
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.IsEnabled == true)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubTitle)
                            </td>

                            <td>
                                <button type="button" data-toggle="tooltip" data-placement="top" title="Disable" onclick="location.href = '@Url.Action("ActivationToggle", "OurServices", new { id = item.OurServiceID })'" class="btn btn-tool" data-card-widget="card-refresh" data-source="/OurServices/Index" data-source-selector="#card-refresh-content" data-load-on-init="false">
                                    <span class="badge bg-success">Enabled</span>
                                </button>
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.OurServiceID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.OurServiceID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.OurServiceID })
                            </td>
                        </tr>

                    }
                    else
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubTitle)
                            </td>

                            <td>

                                <button type="button" data-toggle="tooltip" data-placement="top" title="Enable" onclick="location.href = '@Url.Action("ActivationToggle", "OurServices", new { id = item.OurServiceID })'" class="btn btn-tool" data-card-widget="card-refresh" data-source="/OurServices/Index" data-source-selector="#card-refresh-content" data-load-on-init="false">
                                    <span class="badge bg-danger">Disabled</span>
                                </button>
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.OurServiceID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.OurServiceID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.OurServiceID })
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>

</div>



